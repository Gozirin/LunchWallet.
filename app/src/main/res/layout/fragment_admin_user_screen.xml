<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.user.ui.UserScreenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_screen_backarrow_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_arrow"
            tools:ignore="ContentDescription,HardcodedText" />

        <TextView
            android:id="@+id/user_screen_status_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center_horizontal"
            android:lineHeight="22sp"
            android:text="Status"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="16sp"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/Layout_background"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:background="@color/Layout_background"
        android:drawableLeft="@drawable/ic_search"
        android:layout_marginHorizontal="16dp"/>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/user_screen_filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="#ebebeb"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Name"
                android:textColor="#21334F"
                android:textFontWeight="700"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stack"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/manrope_regular"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:textColor="#21334F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:fontFamily="@font/manrope_regular"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:textColor="#21334F"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_screen_fragment_recyclerView"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_height="450dp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_screen_image_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_downarrow" />

            <TextView
                android:id="@+id/user_screen_number_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/manrope_regular"
                android:text="1"
                android:textFontWeight="400"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/user_screen_image_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_redarrow" />
        </LinearLayout>


    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>



