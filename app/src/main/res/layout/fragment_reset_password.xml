<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodbeneficiary.ui.login_and_registration.ResetPasswordFragment">


    <ImageView
        android:id="@+id/resetPasswordFragment_imageView1_foodBeneficiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/resetPasswordFragment_textView1_foodBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/reset_password"
        android:textColor="@color/black"
        android:textFontWeight="800"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/resetPasswordFragment_textView2_foodBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetPasswordFragment_textView1_foodBeneficiary"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/enter_the_email_associated_with_your_account_and_nwe_ll_send_an_email_with_instruction_to_reset_your_npassword"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/resetPasswordFragment_textView3_foodBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetPasswordFragment_textView2_foodBeneficiary"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/Email"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resetPasswordFragment_editEmail1_foodBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetPasswordFragment_textView3_foodBeneficiary"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:padding="1dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resetPasswordFragment_editEmail2_foodBeneficiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:hint="@string/enter_your_mail"
            android:textFontWeight="400"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/resetPasswordFragment_button_foodBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@+id/resetPasswordFragment_editEmail1_foodBeneficiary"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E53935"
        android:fontFamily="@font/manrope_regular"
        android:padding="1dp"
        android:text="@string/ResetPassword"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textFontWeight="600"
        android:textSize="14sp" />


</RelativeLayout>