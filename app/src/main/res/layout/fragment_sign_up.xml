<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".foodbeneficiary.ui.main.signup.SignUpFragment"
        android:id="@+id/scrollView"
        android:background="@color/white"
        android:scrollbarStyle="insideInset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
           android:paddingTop="20dp"
            android:id="@+id/signFragment"
            tools:context=".fragment.SignUpFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signupFragment_layout_backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_angle_left" />

                <TextView
                    android:id="@+id/signupFragment_layout_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/lunch_wallet"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/ic_cuisine" />

                <TextView
                    android:id="@+id/signupFragment_layout_headerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="20dp"
                    android:text="@string/create_an_account"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/last_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/full_name"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="10dp"
                app:helperTextTextColor="#a30306">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Last_Name_Consumer_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/enter_your_full_name"
                    android:lines="1"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/email"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperTextTextColor="#a30306"
                android:layout_marginTop="10dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Email_Consumer_sign_up"
                    android:layout_width="match_parent"
                    android:hint="@string/enter_your_decagon_email"
                    android:layout_height="50dp"
                    android:lines="1"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/stack_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/stack"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/stack_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:helperText=""
                app:helperTextTextColor="#a30306"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/stack_autoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_regular"
                    android:hint="@string/stack"
                    android:inputType="none"
                    android:padding="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/location"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/location_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:helperText=""
                app:helperTextTextColor="#a30306"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/location_autoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_regular"
                    android:hint="@string/location"
                    android:inputType="none"
                    android:padding="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/password"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="10dp"
                app:helperTextTextColor="#a30306"
                app:passwordToggleEnabled="true"
                app:counterMaxLength="16">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Password_Consumer_sign_up"
                    android:layout_width="match_parent"
                    android:hint="@string/password"
                    android:layout_height="50dp"
                    android:lines="1"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/confirm_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/confirm_password"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confrim_password_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:hintEnabled="false"
                app:helperTextTextColor="#a30306"
                app:passwordToggleEnabled="true"
                app:counterMaxLength="16">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword_Consumer_sign_up"
                    android:layout_width="match_parent"
                    android:hint="@string/password"
                    android:layout_height="50dp"
                    android:lines="1"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/sign_up"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/theme_color"/>
        </LinearLayout>
    </ScrollView>